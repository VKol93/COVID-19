<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.countrydetails.CountryDetailsFragment" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/casesTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/casesTextView"
        android:layout_marginTop="16dp"
        android:textSize="32sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/casesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        android:layout_marginTop="16dp"
        android:textSize="32sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recoveredTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/recoveredTextView"
        android:layout_marginTop="16dp"
        android:textSize="32sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/recoveredTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/casesTextView"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        android:layout_marginTop="16dp"
        android:textSize="32sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deathsTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/deathsTextView"
        android:layout_marginTop="16dp"
        android:textSize="32sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/deathsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recoveredTextView"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        android:layout_marginTop="16dp"
        android:textSize="32sp"
        android:textColor="@color/colorBlack"/>
</androidx.constraintlayout.widget.ConstraintLayout>